# Email Trigger Configuration
# Copy this file to .env and fill in your values

# ==============================================================================
# Gmail IMAP Settings
# ==============================================================================

# Your Gmail address that receives trigger emails
EMAIL_ADDRESS=nick@computeruse.agency

# Gmail App Password (NOT your regular password)
# Get one at: https://myaccount.google.com/apppasswords
# Requirements: 2FA must be enabled on your Google account
GMAIL_APP_PASSWORD=xxxx-xxxx-xxxx-xxxx

# Email addresses authorized to trigger workflows (comma-separated)
# Only emails FROM these addresses will trigger the pipeline
# Note: Defaults are already hardcoded in email_watcher.py, so this is optional
AUTHORIZED_SENDERS=koell@stblstrategies.com,nickv@testkey.com

# ==============================================================================
# Zoho Configuration (for orchestrator)
# ==============================================================================

ZOHO_CLIENT_ID=your_client_id
ZOHO_CLIENT_SECRET=your_client_secret
ZOHO_REFRESH_TOKEN=your_refresh_token
ZOHO_ORG_ID=your_org_id

# ==============================================================================
# API Keys
# ==============================================================================

ANTHROPIC_API_KEY=sk-ant-...

# ==============================================================================
# AWS S3 (for PDF storage)
# ==============================================================================

AWS_ACCESS_KEY_ID=...
AWS_SECRET_ACCESS_KEY=...
AWS_DEFAULT_REGION=us-east-1
